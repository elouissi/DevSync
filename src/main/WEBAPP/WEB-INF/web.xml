<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
         version="6.0">

    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>org.project.controller.UserServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/users</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>loginUser</servlet-name>
        <servlet-class>org.project.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginUser</servlet-name>
        <url-pattern>/loginUser</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>logoutUser</servlet-name>
        <servlet-class>org.project.controller.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logoutUser</servlet-name>
        <url-pattern>/logoutUser</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>TaskServlet</servlet-name>
        <servlet-class>org.project.controller.TaskServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TaskServlet</servlet-name>
        <url-pattern>/tasks</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>TagServlet</servlet-name>
        <servlet-class>org.project.controller.TagServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TagServlet</servlet-name>
        <url-pattern>/tags</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RequestServlet</servlet-name>
        <servlet-class>org.project.controller.RequestServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RequestServlet</servlet-name>
        <url-pattern>/requests</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>StatServlet</servlet-name>
        <servlet-class>org.project.controller.StatServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StatServlet</servlet-name>
        <url-pattern>/stats</url-pattern>
    </servlet-mapping>


</web-app>